<div class="container">
  <div class="row">
    <div class="col-xs-6 bg-warning">
      <h3>ジャンル編集</h3>
    </div>
    <!--ここからジャンル編集-->
    <%= form_with model: @genre, url: admin_genre_path, local: true do |f| %>
      <div class="form-group col-xs-7">
        <%= f.label :name, 'ジャンル' %>
        <%= f.text_field :name %>
        <%= f.label :is_active, '有効' %>
        <%= f.radio_button :is_active, :true, checked: true %>
        <%= f.label :is_active, '無効' %>
        <%= f.radio_button :is_active, :false %>

        <%= f.submit '変更を保存', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>