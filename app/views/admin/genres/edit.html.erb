<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <h3 class="page-title">ジャンル編集</h3>
    </div>
    <!--ここからジャンル編集-->
    <%= form_with model: @genre, url: admin_genre_path, local: true do |f| %>
      <div class="form-group col-sm-7 genre-add">
        <%= f.label :name, 'ジャンル' %>
        <%= f.text_field :name, class: "genre-add-name" %>
        <%= f.label :is_active, '有効' %>
        <%= f.radio_button :is_active, :true, checked: true %>
        <%= f.label :is_active, '無効' %>
        <%= f.radio_button :is_active, :false %>

        <%= f.submit '変更を保存', class: 'btn btn-primary genre-btn' %>
      </div>
    <% end %>
  </div>
</div>