
<div class="container">
  <div class="row">
    <div class="col-xs-6 bg-warning">
      <h3>ジャンル一覧・追加</h3>
    </div>
    <!--ここからジャンル追加-->
    <%= form_with model: @newgenre, url: admin_genres_path, local: true do |f| %>
      <div class="form-group col-xs-7">
        <%= f.label :name, 'ジャンル' %>
        <%= f.text_field :name, placeholder: 'プリン' %>

        <!--boolean型だから、value値としてtrue or falseを送りたい-->
        <%= f.label :is_active, '有効' %>
        <%= f.radio_button :is_active, :true, checked: true %>
        <%= f.label :is_active, '無効' %>
        <%= f.radio_button :is_active, :false %>
        <!--追加ボタン-->
        <%= f.submit 'ジャンル追加', class: 'btn btn-success' %>
      </div>
    <% end %>


    <!--ここからジャンル一覧-->
    <table class="table table-hover">
      <thead class="thead-light">
        <tr>
          <th>ジャンル</th>
          <th>状態</th>
          <th>編集ボタン</th>
          <th>削除ボタン</th>
        </tr>
      </thead>
      <% @genres.each do |genre| %>
      <tbody>
        <tr>
          <td><%= genre.name %></td>
          <td>
            <% if genre.is_active == true %>
            <strong>有効</strong>
            <% else %>
            <strong>無効</strong>
            <% end %>
          </td>
          <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-primary" %></td>
          <td><%= link_to '削除する', admin_genre_path(genre.id), class: "btn btn-danger", method: :delete, "data-confirm" => "Are you sure?" %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
</div>
