<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <h3 class="page-title">ジャンル一覧・追加</h3>
    </div>
    <!--ここからジャンル追加-->
    <%= form_with model: @newgenre, url: admin_genres_path, local: true do |f| %>
    <div class="form-group col-sm-7 genre-add">
      <%= f.label :name, 'ジャンル' %>
      <%= f.text_field :name, class: "genre-add-name" %>

      <!--boolean型だから、value値としてtrue or falseを送りたい-->
      <%= f.label :is_active, '有効' %>
      <%= f.radio_button :is_active, :true, checked: true %>
      <%= f.label :is_active, '無効' %>
      <%= f.radio_button :is_active, :false %>
      <%= f.submit '追加する', class: 'btn btn-success genre-btn' %>
    </div>
    <% end %>


    <!--ここからジャンル一覧-->
    <div class="col-sm-6 genre-table">
      <table class="table table-hover">
        <thead>
          <tr class="category">
            <th>ジャンル</th>
            <th>状態</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <% @genres.each do |genre| %>
        <tbody>
          <tr>
            <td class="genre-data"><%= genre.name %></td>
            <td class="genre-data">
              <% if genre.is_active == true %>
              <strong>有効</strong>
              <% else %>
              <strong>無効</strong>
              <% end %>
            </td>
            <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-primary" %></td>
            <td><%= link_to '削除する', admin_genre_path(genre.id), class: "btn btn-danger", method: :delete, "data-confirm" => "Are you sure?" %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
