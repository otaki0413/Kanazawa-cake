<div class="container">
  <div class="row">
    <div class="col-sm-8">
      <h3 class="page-title"><%= @member.name %>さんの会員データ</h3>
      <table class="table table-bordered member-table">
        <tbody>
          <tr>
            <th class="category">顧客ID</th>
            <td>
              <%= @member.id %>
              <% if @member.is_deleted == true %>
                <span class="btn btn-danger btn-sm true-member">退会済み</span>
              <% else %>
                <span class="btn btn-success btn-sm false-member">有効会員</span>
              <% end %>
            </td>
          </tr>
          <tr>
            <th class="category">氏名</th>
            <td><%= @member.name%></td>
          </tr>
          <tr>
            <th class="category">フリガナ</th>
            <td><%= @member.kana %></td>
          </tr>
          <tr>
            <th class="category">郵便番号</th>
            <td><%= @member.postcode %></td>
          </tr>
          <tr>
            <th class="category">住所</th>
            <td><%= @member.address %></td>
          </tr>
          <tr>
            <th class="category">電話番号</th>
            <td><%= @member.phone_number %></td>
          </tr>
          <tr>
            <th class="category">メールアドレス</th>
            <td colspan="2"><%= @member.email %></td>
          </tr>
        </tbody>
      </table>

      <div class="nav-row col-sm-7">
        <%= link_to "編集する",  edit_admin_member_path, class: "btn btn-primary col-sm-5" %>
        <%= link_to "注文履歴一覧へ", admin_orders_path, class: "btn btn-primary col-sm-5" %>
      </div>

    </div>
  </div>
</div>
