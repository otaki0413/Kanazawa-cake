<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <h3 class="page-title">商品編集</h3>
    </div>

    <!-- form_with部分 -->
    <%= form_with model: @product, url: admin_product_path, local: true do |f| %>
    <div class="col-sm-12 new-product">

      <!--商品画像-->
      <div class="col-sm-4 product-image">
        <div class="field row">
          <%= f.label :image, "商品イメージ" %>
          <%= f.attachment_field :image %>
          <%= attachment_image_tag @product, :image, :fill, 300, 200, format: 'jpeg', class: "img-rounded profile-img", fallback: "no_image.jpg" %>
        </div>
      </div>

      <!--商品情報-->
      <div class="col-sm-7">
        <div class="form-group col-sm-6">
          <%= f.label :name, '商品名' %>
          <%= f.text_field :name, placeholder: "◯◯ケーキ", class: 'form-control' %>
        </div>
        <div class="form-group col-sm-9">
          <%= f.label :introduction, '商品説明' %>
          <%= f.text_area :introduction, class: 'form-control' %>
        </div>
        <div class="form-group col-sm-7">
          <%= f.label :genre_id, 'ジャンル' %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, :include_blank => '選択してください', required: true %>
        </div>
        <div class="form-group col-sm-7">
          <%= f.label :no_tax_price, '税抜価格' %>
          <%= f.text_field :no_tax_price %>円
        </div>
        <div class="form-group col-sm-7">
          <%= f.label :is_active, '販売ステータス' %>
          <!--< f.select :is_active, {'販売中': 1, '売り切れ': 2, }, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>-->
          <%= f.select :is_active, [['販売中', true],['売切れ', false]], { include_blank: '選択してください'}, { required: true } %>
        </div>
        <div class="form-group col-sm-7">
          <%= f.submit '変更を保存', class: 'btn btn-primary' %>
        </div>
      </div>

    </div>
    <% end %>
    <!--form_withここまで-->

  </div>
</div>