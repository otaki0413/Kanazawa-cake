<div class="container">
  <h1>ここは商品一覧です</h1>
  <div class="row">
    <div class="col-sm-2 bg-warning">
      <div class="genre-serch-box">
        <p class="genre-serch-text"><strong>ジャンル検索</strong></p>
        <% @genres.each do |genre| %>
          <p class="genre-name"><%= genre.name %></p>
        <% end %>
      </div>
    </div>
    <div class="col-sm-10 bg-success">
      <h2>商品一覧</h2>
      <div class="product-boxes">
      <% @products.each do |product| %>
        <div class="product-box">
          <%= attachment_image_tag product, :image, :fill, 230, 150, format: 'jpeg', class: "img-rounded profile-img", fallback: "no_image.jpg" %>
          <p><%= link_to product.name, product_path(product.id) %></p>
          <p>￥<%= product.no_tax_price %></p>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>

